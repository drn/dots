snippet spec "Inject RSpec spec"
# frozen_string_literal: true

require 'rails_helper'

describe $1 do
  $2
end
endsnippet

snippet sub "Inject RSpec subject"
subject { $1 }
endsnippet

snippet des "Inject RSpec describe"
describe '$1' do
  $2
end
endsnippet

snippet con "Inject RSpec context"
context '$1' do
  $2
end
endsnippet

snippet let "Inject RSpec let"
let(:$1) { $2 }
endsnippet

snippet it "Inject RSpec it"
it '$1' do
  $2
end
endsnippet

snippet rpry "Insert a pry binding rspec it block"
it { binding.pry }
endsnippet
