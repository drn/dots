#!/bin/bash

# Upload to acorn host

if [[
  "$#" -ne 1 || (
    "$1" != "4k" &&
    "$1" != "books" &&
    "$1" != "hole" &&
    "$1" != "manga" &&
    "$1" != "misc" &&
    "$1" != "movies" &&
    "$1" != "music" &&
    "$1" != "safe" &&
    "$1" != "tv"
  ) ]]; then
  echo "Usage: tor [movies/tv/safe/misc/hole/books/manga/4k/music]"
  exit 1
fi

target=$1
if [ "$target" = "hole" ]; then
  target="blackhole"
fi
if [ "$target" = "books" ]; then
  target="audiobooks"
fi
if [ "$target" = "4k" ]; then
  target="movies-4k"
fi

cd ~/Downloads || exit 1
shopt -s nullglob
torrents=(*.torrent)
if [ ${#torrents[@]} -eq 0 ]; then
  echo -e "\033[00;31mNo torrents found\033[0m"
else
  host="$ACORN_USERNAME@$ACORN_HOST"
  destination="./downloads/torrents/$target"
  for torrent in "${torrents[@]}"; do
    echo -e "\033[00;34mUploading $torrent\033[0m"
    scp "$torrent" "$host:$destination" && rm "$torrent"
  done
fi
